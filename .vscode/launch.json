  "version": "0.2.0",
  "configurations": [
    {
      "name": "uv pytest",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "pytest",
      "args": [
        "--cov",
        "--cov-branch",
        "-v",
        "-s"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "uv debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
